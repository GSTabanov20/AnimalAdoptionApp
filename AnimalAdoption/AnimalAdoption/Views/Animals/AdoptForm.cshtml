@model AnimalAdoption.Models.AdoptionRequest

<div class="container mt-5">
    <h1 class="display-4">Adoption Form</h1>
    <form asp-action="SubmitAdoptForm" method="post">
        <div class="form-group">
            <label for="question1">Why do you want to adopt this animal?</label>
            <textarea class="form-control" id="question1" name="Question1" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="question2">Do you have any prior experience with pets?</label>
            <textarea class="form-control" id="question2" name="Question2" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="question3">How will you take care of the pet?</label>
            <textarea class="form-control" id="question3" name="Question3" rows="3"></textarea>
        </div>
        <input type="hidden" name="AnimalId" value="@Model.AnimalId" />
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
</div>