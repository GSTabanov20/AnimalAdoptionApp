@model AnimalAdoption.Models.Animal
@using AnimalAdoption.Controllers

<h1>Details</h1>

<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">Age</dt>
        <dd class = "col-sm-10">
            @AnimalsController.CalculateAge(Model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">Species</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <dt class = "col-sm-2">Gender</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">Description</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">Image</dt>
        <dd class = "col-sm-10">
            <img src="~/images/animals/@Model.Image" alt="image" width="150" height="150">
        </dd>
        <dt class = "col-sm-2">Is adopted</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAdopted)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>