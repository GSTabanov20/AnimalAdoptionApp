@model AnimalAdoption.Models.Animal
@using AnimalAdoption.Controllers

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">Age</dt>
        <dd class = "col-sm-10">
            @AnimalsController.CalculateAge(Model.DateOfBirth)

        </dd>
        <dt class = "col-sm-2">Species</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <dt class = "col-sm-2">Description</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">Image</dt>
        <dd class = "col-sm-10">
            <img src="~/images/@Model.Image" alt="image" width="150" height="150">
        </dd>
        <dt class = "col-sm-2">Is adopted</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAdopted)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>